{
	"name": "spaze/michalspacek.cz",
	"type": "project",
	"description": "Source code for my site",
	"license": "MIT",
	"require": {
		"php": "^8.1",
		"ext-ctype": "*",
		"ext-fileinfo": "*",
		"ext-intl": "*",
		"ext-libxml": "*",
		"ext-mbstring": "*",
		"ext-openssl": "*",
		"ext-pcntl": "*",
		"ext-pdo": "*",
		"ext-simplexml": "*",
		"contributte/translation": "^1.0",
		"latte/latte": "^2.11",
		"nette/application": "~3.0",
		"nette/bootstrap": "~3.0",
		"nette/component-model": "~3.0",
		"nette/database": "~3.0",
		"nette/forms": "~3.0",
		"nette/http": "^3.0.5",
		"nette/mail": "~3.0",
		"nette/neon": "^3.3.1",
		"nette/robot-loader": "^3.0",
		"nette/security": "~3.1.4",
		"nette/utils": "~3.0",
		"paragonie/halite": "^5.0",
		"php-parallel-lint/php-console-color": "^1.0",
		"spaze/csp-config": "^2.1",
		"spaze/encryption": "^1.0",
		"spaze/feed-exports": "~0.2",
		"spaze/mysql-session-handler": "^2.0",
		"spaze/nonce-generator": "^3.0",
		"spaze/phpinfo": "^0.1.0",
		"spaze/sri-macros": "^1.0",
		"symfony/cache": "^6.1",
		"texy/texy": "~3.0",
		"tracy/tracy": "~2.3"
	},
	"replace": {
		"paragonie/random_compat": "9.99.99",
		"paragonie/sodium_compat": "*",
		"symfony/polyfill-ctype": "*",
		"symfony/polyfill-mbstring": "*",
		"symfony/polyfill-php73": "*",
		"symfony/polyfill-php80": "*",
		"symfony/polyfill-php81": "*"
	},
	"require-dev": {
		"nette/tester": "^2.0",
		"php-parallel-lint/php-console-highlighter": "^1.0",
		"php-parallel-lint/php-parallel-lint": "^1.2",
		"phpstan/phpstan": "^1.0",
		"phpstan/phpstan-deprecation-rules": "^1.0",
		"phpstan/phpstan-nette": "^1.0",
		"roave/security-advisories": "dev-latest",
		"spaze/coding-standard": "^1.1",
		"spaze/phpstan-disallowed-calls": "^2.0",
		"spaze/phpstan-disallowed-calls-nette": "^2.0"
	},
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"autoload": {
		"psr-4": {
			"MichalSpacekCz\\": "app/"
		}
	},
	"scripts": {
		"cs-fix": "vendor/squizlabs/php_codesniffer/bin/phpcbf app/ public/ tests/",
		"check-file-patterns": "bin/check-file-patterns.sh",
		"lint": "vendor/php-parallel-lint/php-parallel-lint/parallel-lint --colors app/ public/ tests/",
		"lint-latte": "bin/latte-lint.php app/",
		"lint-neon": "vendor/nette/neon/bin/neon-lint app/",
		"phpcs": "vendor/squizlabs/php_codesniffer/bin/phpcs app/ public/ tests/",
		"phpstan": "vendor/phpstan/phpstan/phpstan -vvv --ansi analyse --configuration phpstan.neon",
		"phpstan-vendor": "vendor/phpstan/phpstan/phpstan -vvv --ansi analyse --configuration phpstan-vendor.neon",
		"test": [
			"composer audit",
			"@check-file-patterns",
			"@lint",
			"@lint-latte",
			"@lint-neon",
			"@phpcs",
			"@phpstan",
			"@tester",
			"@phpstan-vendor"
		],
		"tester": "vendor/nette/tester/src/tester -c tests/php-unix.ini --colors 1 --coverage temp/coverage.html --coverage-src app/ tests/"
	}
}
