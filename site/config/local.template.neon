mail:
	smtp: true
	host: localhost
	port: 25

contentSecurityPolicy: # list values here are added to the existing list values, they do not replace them
	policies:
		www.*.*:
			img-src:
				- 'data:'
			style-src:
				- "'unsafe-inline'"
		admin.*.*:
			script-src:
				-"'self'"
		admin.info.php:
			@extends: www.*.*
			script-src:
				- "'self'"
		api.*.*:
			img-src:
				- 'data:'
			script-src:
				- "'self'"
			style-src:
				- "'unsafe-inline'"
		webleed.*.*:
			script-src:
				-"'self'"
		pulse.*.*:
			script-src:
				-"'self'"
		upckeys.*.*:
			script-src:
				-"'self'"

