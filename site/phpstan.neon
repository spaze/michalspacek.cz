parameters:
	tmpDir: /tmp/phpstan/michalspacek.cz
	paths:
		- app
		- bin
		- public
		- tests
	fileExtensions:
		- php
		- phpt
	level: max
	checkMissingOverrideMethodAttribute: true
	netteLinks:
		applicationMapping: # Copy of mapping from common.neon
			*: MichalSpacekCz\*\Presenters\*Presenter
	ignoreErrors:
		- # https://github.com/phpstan/phpstan-nette/issues/144
			message: '#^Strict comparison using !== between string and never will always evaluate to true#'
			path: app/Talks/TalkFactory.php
			count: 1

includes:
	- phar://phpstan.phar/conf/bleedingEdge.neon
	- vendor/phpstan/phpstan-nette/extension.neon
	- vendor/phpstan/phpstan-nette/rules.neon
	- disallowed-calls.neon
	- vendor/phpstan/phpstan-deprecation-rules/rules.neon
	- vendor/metisfw/phpstan-nette-links/extension.neon
	- vendor/metisfw/phpstan-nette-links/rules.neon
