{varType MichalSpacekCz\Training\Files\TrainingFile[] $files}
{var $robots = 'noindex, nofollow'}

{define #menu}
&raquo; <a n:href="Homepage:">Michal Špaček</a>
&raquo; <a n:href="Trainings:">{_messages.label.trainings}</a>
{if $trainingName}
&raquo; <a n:href="Trainings:training $trainingName">{$trainingTitle}</a>
{/if}
{/define}

{define #content}
{var $familiar = $familiar ? 'familiar' : 'formal'}
{var $type = $remote ? 'remote' : 'regular'}
<p>
	{capture $date}{$trainingStart|localeIntervalDay:$trainingEnd}{/capture}
	{_messages.trainings.files.thankyou.$type|format:$trainingTitle:$date}
	{_messages.trainings.files.download.$type.$familiar}
</p>
<ul>
	<li n:foreach="$files as $file"><a n:href="Files:training $file->getFilename()">{$file->getFilename()}</a> ({$file->getFileInfo()->getSize()|bytes}, přidáno {$file->getAdded()|localeDay})</li>
</ul>
<p n:if="!$remote">{_messages.trainings.moretrainings.$familiar|format:'link:Www:Trainings:'}</p>
{/define}
